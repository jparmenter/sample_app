<% provide(:title, "New Message") %>
<h1>New Message</h1>
<div class="row">
  <%= render 'sidebar' %>
  <div class="col-md-8">
    <%= form_for(@message) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.label :to %>
      <%= f.text_field :to, class: "form-control" %>

      <%= f.label :content %>
      <%= f.text_area :content, class: "form-control" %>

      <%= f.button "Send", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
